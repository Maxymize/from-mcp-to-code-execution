{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "client.ts",
    "servers/**/*.ts",
    ".claude/skills/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
